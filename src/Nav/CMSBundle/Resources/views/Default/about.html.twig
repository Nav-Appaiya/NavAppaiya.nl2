{% extends '@NavCMS/layout.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header" id="banner">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h1>About</h1>
                        <p class="lead">Stay informed.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

                {% for row in badges|batch(2) %}
                        <div class="row">
                            {% for badge in row %}
                                <div class="col-md-6">
                                    <img src="{{ badge.imageUrl }}" alt="badge"
                                         class="badges img-responsive pull-left"/>
                                    <blockquote class="pull-left">
                                        <h3>{{ badge.assertion.badge.name }}</h3>

                                        <p>{{ badge.assertion.badge.description }}</p>
                                        <small>Achieved on {{ badge.assertion.issued_on }}</small>
                                    </blockquote>
                                </div>
                            {% endfor %}
                        </div>
                {% endfor %}
{% endblock %}