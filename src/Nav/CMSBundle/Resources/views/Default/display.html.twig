{% extends '@NavCMS/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ page.title }}</h2>
            <p class="lead">{{ page.category.name }}</p>
            <p>
            {{ page.content }}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% for entry in articles %}
                    <div class="panel-body">
                        <a class="btn btn-default btn-block" href="{{ entry.link }}">
                            <h4 class="white">{{ entry.title }} <br/>
                                <small>{{ entry.author }} - {{ entry.publishedDate|date('d/m/Y H:i', timezone="Europe/Amsterdam") }}</small>
                            </h4>
                            {% for category in entry.categories %}
                                {{ category }}
                            {% endfor %}
                            <p>
                                {{ entry.contentSnippet }}
                            </p>
                        </a>
                    </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}