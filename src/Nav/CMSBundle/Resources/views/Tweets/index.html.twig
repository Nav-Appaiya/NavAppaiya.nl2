{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="page-header">Tweets overview</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th width="10%">Created at</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        {% for tweet in tweets %}
            <tr>
                <td>{{ tweet.id_str }}</td>
                <td>{{ tweet.created_at|date('m-d-Y H:i:s') }}</td>
                <td>{{ tweet.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
